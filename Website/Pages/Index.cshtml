@page 
@using BuildYourBowl.Data
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Build Your Bowl!</h1>
    <h3> Hey There! Hope you'll love it</h3>
</div>
    <form id="search-form">
        <div >
            <input type ="text" name="SearchTerms" value="@Model.SearchTerms"/>
            <input type="submit" value="Search"/>
        </div>
        <div id="filters">
        <h4>Calories</h4>
        <div>
            Between
            <input name="CaloriesMin" type="number" min="0" max="1200" step="0.1" placeholder="min" value="@Model.CaloriesMin" />
            and
            <input name="CaloriesMax" type="number" min="0" max="1200" step="0.1" placeholder="max" value="@Model.CaloriesMax" />

        </div>

        <h4>Price</h4>
        <div>
            Between
            <input name="PriceMin" type="number" min="0" max="18" step="0.1" placeholder="min" value="@Model.PriceMin" />
            and
            <input name="PriceMax" type="number" min="0" max="18" step="0.1" placeholder="max" value="@Model.PriceMax" />
        </div>

        </div>

  </form>  
    <div  class="container"> 
    <h4 class="title-heading ">Entrees</h4>
    @foreach (IMenuItem item in Model.Entrees)
    {
        <div id="entrees" class="item">
                <h5 class="item-name">@item.Name</h5>
               <ul>

             
            @foreach(string str in item.PreparationInformation)
            {
               <li>@str</li>
            }
            </ul>
            <p>Price: @item.Price</p>
                <p>Calories: @item.Calories</p>
        </div>      
    }
    </div>

    <h4 class="title-heading">Ingredients</h4>

    <div style="display: flex;">

        <div style="flex: 1;">


    
    <table class="tables" id="ingredients-table">
        <tr>
            <td>Name</td>
            <td>Calories</td>
            <td> Additional Cost (build-your-owns)</td>
        </tr>
            @foreach(IngredientItem item in Model.Ingredients)
            {
         <tr>
                <td>@item.Name</td>
                <td>@item.Calories</td>
                <td>@item.UnitCost</td>
         </tr>
            }

      
    </table>
    <div></div>
        </div>

        <div style="flex: 1;">



       
    <table class="tables" id="salsa-table">
        <tr>
            <td>Salsa Choice</td>
        </tr>
        @foreach(Salsa item in Model.Salsas)
        {
            <tr>
            <td>@item.ToString()</td>
             </tr>
        }
       
    </table>
        </div>
    </div>


<div id="sides">


        <h4 class="title-heading ">Sides</h4>
    @foreach (IMenuItem item in Model.Sides)
    {
        <div class="item">
            <h5 class="item-name">@item.Name</h5>
            <ul>


                @foreach (string str in item.PreparationInformation)
                {
                    <li>@str</li>
                }
            </ul>
            <p>Price: @item.Price</p>
            <p>Calories: @item.Calories</p>
        </div>
    }
</div>

    <h4 class="title-heading ">Drinks</h4>
    <div id="drinks">
        @foreach (IMenuItem item in Model.Drinks)
